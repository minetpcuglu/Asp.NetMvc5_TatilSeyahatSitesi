@using Asp.NetMvc5_TatilSeyahatSitesi.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullancı Adı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.YorumId</td>
            <td>@x.KullaniciAdi</td>
            <td>@x.Mail</td>
            <td>@x.Yorum</td>
            <td>@x.Blog.Baslık</td>
            <td><a href="/Admin/YorumSil/@x.YorumId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/YorumSayfasınıGetir/@x.YorumId" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }

</table>

