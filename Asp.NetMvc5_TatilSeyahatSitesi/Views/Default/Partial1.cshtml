@using Asp.NetMvc5_TatilSeyahatSitesi.Models.Siniflar
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" alt="" />
            </div>
            <div class="left-text">
                <h4>@x.Baslık</h4>
                <span class="doller">@x.Tarih.ToString("dd:MM:yyyy")</span>
                <p>@x.Aciklama.Substring(0,99)</p>
                <p><a href="/Blog/BlogDetay/@x.BlogId"><span class="read">Devamı... >></span></a></p>
            </div>
        </div>
    }

    @Html.Action("Partial2","Default")

  
    <div class="clear"></div>
</div>