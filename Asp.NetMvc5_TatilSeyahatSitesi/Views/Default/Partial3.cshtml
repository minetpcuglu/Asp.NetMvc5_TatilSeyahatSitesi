@using Asp.NetMvc5_TatilSeyahatSitesi.Models.Siniflar
@model List<Blog>
<div class="padding">
    <h4>En Popüler 10 Blok</h4>
    
    <ul class="list list-pad">
        @{ int i = 0;}
        @foreach (var x in Model)
        {
            <li class="list-bg"><span>@{i++;} @i</span><a href="/Blog/BlogDetay/@x.BlogId">@x.Baslık</a></li>

        }


    </ul>
    <a href="/Blog/Index" class="link1">Tümünü Gör</a>
</div>
