@using Asp.NetMvc5_TatilSeyahatSitesi.Models.Siniflar
@model List<Blog>
@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogImage" alt="" />
        </div>
        <div class="left-text">

            <h4>@x.Baslık</h4>
            <span class="doller">@x.Tarih.ToString("dd:MM:yyyy")</span>
            <p>@x.Aciklama.Substring(0,80)</p>
            <p><a href="/Blog/BlogDetay/@x.BlogId"><span class="read">Devamı... >></span></a></p>
        </div>
    </div>
}
